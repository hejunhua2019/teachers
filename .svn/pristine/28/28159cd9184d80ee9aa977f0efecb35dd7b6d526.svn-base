                  表单元素 begin
---------------------------------------------------****/
/*表单元素定义*/
input{
	overflow:visible;
	line-height:normal;
}
input,select{
	_height: 18px;
    _line-height:18px;
    _padding:4px 6px;
    _vertical-align: middle;
	_color:#333;
}
input,select,textarea, input[type="text"], input[type="password"], input[type="datetime"], input[type="datetime-local"], input[type="date"], input[type="month"], input[type="time"], input[type="week"], input[type="number"], input[type="email"], input[type="url"], input[type="search"], input[type="tel"], input[type="color"], .uneditable-input {
    border-radius: 2px;
    color: #666;
    display: inline-block;
    vertical-align: middle;
	border:1px solid #D0D0D0;
	height:28px;	
	padding-left:5px;
	padding-right:5px;
	line-height:30px\9;
	font-size:12px;	
	background-color: #FFFFFF;
	*background-color:#fff;
}
select{
	border:1px solid #D0D0D0;
	height:30px;	
	padding-left:3px;
	padding-right:0;
	background-color: #FAFAFA;
}
select[multiple], select[size] {
    height: auto;
}
textarea {
    height: auto;
    line-height:180%;
    padding:5px;
}
input:focus,textarea:focus, input[type="text"]:focus, input[type="password"]:focus, input[type="datetime"]:focus, input[type="datetime-local"]:focus, input[type="date"]:focus, input[type="month"]:focus, input[type="time"]:focus, input[type="week"]:focus, input[type="number"]:focus, input[type="email"]:focus, input[type="url"]:focus, input[type="search"]:focus, input[type="tel"]:focus, input[type="color"]:focus, .uneditable-input:focus {
    outline: 0 none;
}
input[type="text"]:focus{
	border-color: rgba(153, 153, 153, 0.8);
}
input[type="radio"], input[type="checkbox"] {
    line-height: normal;
}
select:focus, input[type="file"]:focus, input[type="radio"]:focus, input[type="checkbox"]:focus {
    outline: 0 none;
    outline-offset: -2px;
}

input[type="radio"],
input[type="checkbox"] {
  width:16px;
  height:16px;
  margin:0 0 0 3px;
  vertical-align: middle;
  border:none 0;
  padding:0;
}

input[type="file"]:focus,
input[type="radio"]:focus,
input[type="checkbox"]:focus,
input[type="submit"]:focus {
  outline: 0 none;
}
input[type="submit"],
input[type="button"]{
	cursor:pointer;
	color:#666;
	background-color:#fff;
	border:#d0d0d0 1px solid;
}
input[type="submit"]:hover,
input[type="button"]:hover{
	border-color:#999;
	background-color:#fff;
}
select:focus,select:hover{
	background-color: #FFFFFF;
}
label input[type="radio"],
label input[type="checkbox"]{
	margin-right:5px;	
}
